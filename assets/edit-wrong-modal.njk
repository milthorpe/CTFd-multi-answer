<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header text-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="text-center">Wrong Flag</h3>
                    </div>
                </div>
            </div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form method="POST" action="{{ script_root }}/admin/flags/{{id}}">
                <input type="text" id="flag-content" class="form-control" name="content" value="{{content}}" placeholder="Enter wrong flag">
                <input type="text" id="flag-value" class="form-control" name="data" value="{{data}}" placeholder="Enter wrong point value">
                <input type="hidden" id="type" name="type" value="wrong">
                <input type="hidden" name="id" value="{{ id }}">
                <hr>
                <div class="form-group">
                    <input type="hidden" value="{{ nonce }}" name="nonce" id="nonce">
                    <button id="submit-flags" class="btn btn-success float-right">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>